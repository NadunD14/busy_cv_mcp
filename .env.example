# Environment Variables for MCP CV Server

# Backend Server Configuration
PORT=3001
NODE_ENV=development
API_KEY=your_secret_api_key_here

# Frontend Configuration (for API calls)
BACKEND_URL=http://localhost:3001

# Groq AI Configuration (Optional - for enhanced chat responses)
# Get free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Email Service Configuration (choose one)

# SendGrid (Recommended - 100 emails/day free)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# MailerSend (3,000 emails/month free)
# MAILERSEND_API_KEY=your_mailersend_api_key_here

# Brevo (300 emails/day free)
# BREVO_API_KEY=your_brevo_api_key_here

# SMTP (generic email server)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Sender Information
EMAIL_FROM=your_verified_email@domain.com
EMAIL_FROM_NAME=MCP CV Assistant

# Optional: Supabase (for data persistence)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
