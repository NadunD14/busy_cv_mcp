# Environment Variables for MCP CV Server

# Email Service Configuration (choose one)
# MailerSend (3,000 emails/month free)
MAILERSEND_API_KEY=your_mailersend_api_key_here

# Brevo (300 emails/day free)
# BREVO_API_KEY=your_brevo_api_key_here

# SMTP (generic email server)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Sender Information
EMAIL_FROM=your_verified_email@domain.com
EMAIL_FROM_NAME=MCP CV Assistant

# Security
API_KEY=your_secret_api_key_here

# Optional: Supabase (for data persistence)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: OpenAI for enhanced chat (requires paid API)
# OPENAI_API_KEY=your_openai_api_key
